// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int     @id @default(autoincrement())
  nick_name   String?
  first_name  String
  last_name   String
  email       String  @unique
  password    String
  profile     String?
  image       String?
  phone       Int
  postal_code String
  prefecture  String
  city        String
  street      String
  bilding     String?
}

model Items {
  id             Int       @id @default(autoincrement())
  name           String
  price          Int
  image          String
  description    String
  user_id        Int
  size_id        Int?
  shopping_date  DateTime?
  shopping_price Int?
  product_state  String?
  product_brand  String?
  product_days   String?
  category       String?
  state          Boolean?
  order_id       Int?
}

model Likes {
  id         Int       @id @default(autoincrement())
  name       String
  price      Int
  user_id    Int
  like_date  DateTime?
  category   String
  image      String?
  product_id Int?
}

model Cart {
  id         Int       @id @default(autoincrement())
  name       String
  price      Int
  user_id    Int
  cart_date  DateTime?
  category   String
  image      String?
  product_id Int?
  order      Order?    @relation("OrderToCart", fields: [orderId], references: [id])
  orderId    Int?
  state      Boolean?
}

model Order {
  id        Int      @id @default(autoincrement())
  price     Int
  user_id   Int
  orderedAt DateTime @default(now())
  carts     Cart[]   @relation("OrderToCart")
}

model Comment {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  comment    String
  user_id    Int
  product_id Int
  name       String?
}

model Review {
  id         Int      @id @default(autoincrement())
  comment    String?
  createdAt  DateTime @default(now())
  rating     Int
  user_id    Int
  product_id Int
}
