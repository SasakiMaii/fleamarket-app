// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//マイグレートしていない
model Users {
  id          Int     @id @default(autoincrement())
  nick_name   String?
  first_name  String
  last_name   String
  email       String  @unique
  password    String
  profile     String?
  image       String?
  phone       Int
  postal_code String
  prefecture  String
  city        String
  street      String
  bilding     String?
}

model Items {
  id             Int       @id @default(autoincrement())
  name           String
  price          Int
  image          String
  description    String
  user_id        Int
  size_id        Int?
  shopping_date  DateTime?
  shopping_price Int?
  product_state  String?
  product_brand  String?
  product_days   String?
  category       String?
}

model Likes {
  id         Int       @id @default(autoincrement())
  name       String
  price      Int
  user_id    Int
  like_date  DateTime?
  category   String
  image      String?
  product_id Int?
}
